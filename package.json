{
  "name": "@activewidgets/options",
  "version": "3.0.0",
  "description": "ActiveWidgets grid configuration options",
  "author": "ActiveWidgets SARL",
  "license": "MIT",
  "main": "./dist/options.js",
  "module": "./dist/esm/options.js",
  "files": [
    "dist",
    "*/package.json",
    "*/unit.js",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "npm run lint && rimraf dist/* && rollup -c",
    "lint": "eslint **/*.js -f unix",
    "prepack": "npm run build",
    "test": "jest"
  },
  "devDependencies": {
    "@activewidgets/datagrid": "3.0.0",
    "@activewidgets/frameworks": "3.0.0",
    "@activewidgets/testing": "0.0.3",
    "@babel/core": "^7",
    "@babel/preset-env": "^7",
    "@rollup/plugin-node-resolve": "^6",
    "eslint": "^5",
    "rimraf": "^3",
    "rollup": "^1.20",
    "rollup-plugin-babel": "^4",
    "rollup-plugin-terser": "^5"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "globals": {
      "Promise": true
    },
    "env": {
      "browser": true
    }
  },
  "eslintIgnore": [
    "dist",
    "*/unit.js"
  ],
  "jest": {
    "preset": "@activewidgets/testing",
    "moduleNameMapper": {
      "@activewidgets/components": "@activewidgets/datagrid",
      "@activewidgets/options": "<rootDir>/"
    },
    "testMatch": [
      "<rootDir>/*/unit.js"
    ]
  },
  "postcss": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/activewidgets/options.git"
  },
  "keywords": [
    "react"
  ],
  "bugs": {
    "url": "https://github.com/activewidgets/options/issues"
  },
  "homepage": "https://github.com/activewidgets/options#readme"
}
