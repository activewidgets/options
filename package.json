{
  "name": "@activewidgets/options",
  "version": "3.4.3",
  "description": "ActiveWidgets grid configuration options",
  "author": "ActiveWidgets SARL",
  "license": "MIT",
  "type": "module",
  "main": "./dist/options.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": "./dist/options.js"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "npm run lint && rimraf --glob dist/* && rollup -c && npm run types",
    "lint": "eslint **/*.js -f unix",
    "prepack": "npm run build",
    "test": "vitest run",
    "types": "tsc index.js --allowJs --declaration --declarationMap --emitDeclarationOnly --outDir dist/types"
  },
  "dependencies": {
    "@activewidgets/experimental": "3.4.3"
  },
  "devDependencies": {
    "@activewidgets/datagrid": "3.4.3",
    "@activewidgets/frameworks": "3.4.3",
    "@activewidgets/testing": "0.1.2",
    "@rollup/plugin-node-resolve": "^15",
    "@rollup/plugin-terser": "^0.4",
    "@testing-library/preact": "^3",
    "eslint": "^8",
    "preact": "10.4.4",
    "rimraf": "^4",
    "rollup": "^3",
    "typescript": "^5"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "globals": {
      "Promise": true
    },
    "rules": {
      "no-prototype-builtins": "off"
    },
    "env": {
      "browser": true
    }
  },
  "eslintIgnore": [
    "dist",
    "*/unit.js"
  ],
  "postcss": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/activewidgets/options.git"
  },
  "keywords": [
    "react"
  ],
  "bugs": {
    "url": "https://github.com/activewidgets/options/issues"
  },
  "homepage": "https://github.com/activewidgets/options#readme"
}
